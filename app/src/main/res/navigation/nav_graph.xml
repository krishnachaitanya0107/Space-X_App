<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/baseFragment">

    <fragment
        android:id="@+id/crewFragment"
        android:name="com.example.space_xapp.ui.crew.CrewFragment"
        android:label="SpaceX Crew" >
        <action
            android:id="@+id/action_crewFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.space_xapp.ui.crew.DetailsFragment"
        android:label="Details"
        tools:layout="@layout/fragment_crew_details" />
    <fragment
        android:id="@+id/shipFragment"
        android:name="com.example.space_xapp.ui.ship.ShipFragment"
        android:label="fragment_ship"
        tools:layout="@layout/fragment_ship" />
    <fragment
        android:id="@+id/baseFragment"
        android:name="com.example.space_xapp.ui.BaseFragment"
        android:label="Home" />


</navigation>